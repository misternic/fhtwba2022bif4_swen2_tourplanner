<UserControl x:Class="TourPlanner.Views.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SearchBarViewModel />
    </UserControl.DataContext>
    <DockPanel>
        <Button DockPanel.Dock="Right" Width="100" Margin="2,2,2,2" Command="{Binding SearchCommand}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/images/magnify.png" Width="18" Height="18" />

                <TextBlock>Search</TextBlock>
            </StackPanel>
        </Button>

        <TextBox Margin="2,2,2,2" VerticalContentAlignment="Center" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </DockPanel>
</UserControl>
